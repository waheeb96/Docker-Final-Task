pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials('f6140d40-45f6-4c0c-a678-1db2fb8632bd')
	}

	stages {

		stage('Build project') {

			steps {
				sh 'sudo docker build -t waheeb96/bitcoin-tracker:latest .'
			}
		}

		stage('Login to dockerhub') {

			steps {
				sh 'sudo echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {

			steps {
				sh 'sudo docker push waheeb96/bitcoin-tracker'
			}
		}
	}

	post {
		always {
			sh 'sudo docker logout'
		}
	}

}
