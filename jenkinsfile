pipeline{

	agent any

	environment {
		DOCKERHUB_CREDENTIALS=credentials("waheeb96")
	}

	stages {

		stage('Build project') {

			steps {
				sh 'sudo docker build -t waheeb96/docker-final-task:latest .'
			}
		}

		stage('Login to docker hub') {

			steps {
				sh 'sudo echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push tag') {

			steps {
				sh 'sudo docker push waheeb96/docker-final-task'
			}
		}
	}

	post {
		always {
			sh 'sudo docker logout'
		}
	}

}